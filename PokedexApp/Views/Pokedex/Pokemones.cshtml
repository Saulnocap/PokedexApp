@model List<ServiceLayer.ViewModels.PokemonViewModel>

@{
    ViewData["Title"] = "Pokemones";
}


<div class="container-fluid" style="position:relative;">

    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <div style="text-align: center;">
                <h2>Lo sentimos, no hay pokemones agregados en <img style="height: 140px; width: 140px;" src="~/LogoPagina.png" /> aun.</h2>
                <a class="btn btn-outline-success" style="text-align:center; margin:-20px 20px 20px 20px;" asp-controller="Pokedex" asp-action="Create"><h2>¡Agrega un Pokemon ya!</h2></a>
            </div>
            <img alt="Pika pika?" src="~/Pikachu.png" style="height:300px; width:300px; margin:-40px auto;" />
        }
        else
        {
            <div class="d-inline-block">
                <div style="text-align:center;">
                    <a asp-controller="Pokedex" asp-action="Create" style="text-align: center; margin-bottom: px; padding-left: 300px; padding-right: 300px;" class="btn btn-outline-success">¡Agregar Pokémon!</a>
                </div>
                <h2 style="text-align: center; padding: 20px;">Lista de pokemones</h2>

            </div>
            @foreach (ServiceLayer.ViewModels.PokemonViewModel item in Model)
            {

                <div class="col-3" style="text-align: center;">
                    <div class="card shadow-sm border-0">
                        <div class="d-flex justify-content-end align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Pokedex" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Editar</a>
                                <a asp-controller="Pokedex" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Borrar</a>
                            </div>
                        </div>
                        <img class="bd-placeholder-img card-img-top" src="@item.ImgUrl" />
                        <div class="card-body">
                            <h3>@item.Name</h3>

                            <div class="" style="text-align:center;">
                                <small class="text-muted">Region</small>
                            </div>

                            <div class="" style="text-align:center;">
                                <small class="text-muted">Tipos</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>